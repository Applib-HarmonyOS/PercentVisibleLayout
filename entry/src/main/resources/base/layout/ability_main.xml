<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:btn_horizontal"
        ohos:height="match_content"
        ohos:width="200vp"
        ohos:text="Horizontal"
        ohos:text_color="$color:white"
        ohos:text_size="20fp"
        ohos:padding="15vp"
        ohos:background_element="$color:blue">
    </Button>

    <Button
        ohos:id="$+id:btn_vertical"
        ohos:height="match_content"
        ohos:width="200vp"
        ohos:text="Vertical"
        ohos:text_color="$color:white"
        ohos:text_size="20fp"
        ohos:padding="15vp"
        ohos:top_margin="15vp"
        ohos:background_element="$color:blue">
    </Button>
</DirectionalLayout>